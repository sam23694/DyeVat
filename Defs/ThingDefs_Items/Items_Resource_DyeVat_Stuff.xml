	<!--=============== Pure stuffs: Basics ====================-->

	<ThingDef Name="DyeVatCloth" ParentName="ResourceBase" Abstract="True">
		<description>Cloth woven from organic fibers.</description>
		<graphicData>
			<texPath>Things/Item/Resource/Cloth</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>1.5</MarketValue>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>4</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>DV_DyedCloth</li>
		</thingCategories>
	</ThingDef>

	<!--			Colour wheel			-->
	<ThingDef ParentName="DyeVatCloth" Name="DyedCloth" Abstract="True">
		<stuffProps>
			<categories>
				<li>Fabric</li>
			</categories>
			<allowColorGenerators>false</allowColorGenerators>
		</stuffProps>
	</ThingDef>

